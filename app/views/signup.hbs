<!-- Signup page - with form for a new user to register an account -->
{{> welcomemenu _id="signup"}}
<section class="ui raised segment">
    <div class="ui grid">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                <form action="/signup" method="POST">
                    <h3 class="ui header">Register</h3>
                    <div class="two fields">
                        <div class="field">
                            <label>First Name</label> <input placeholder="First Name" type="text" maxlength="15" name="firstName" required/>
                        </div>
                        <div class="field">
                            <label>Last Name</label> <input placeholder="Last Name" type="text" maxlength="15" name="lastName" required/>
                        </div>
                    </div>
                    <div class="field"><label>Date Of Birth</label><input type="date" maxlength="10" name="dob" required/> </div>
                    <div class="field"><label>Address</label> <input value="Simpson Row" type="text" maxlength="100" name="address" readonly="true" required/></div>
                    <div class="field"><label>Telephone</label> <input placeholder="Telephone Number" type="tel" name="telephone" maxlength="18" required/></div>
                    <div class="field"><label>Email</label> <input placeholder="Email" type="email" name="email" required/></div>
                    <div class="field"><label>Medical</label> <input placeholder="Enter Medical History" maxlength="100" type="text" name="medical" required/></div>
                    <div class="field"><label>Password</label> <input type="password" name="password" required/></div>
                    <button class="ui teal submit button">Submit</button>
                </form>
                {{> error }}
            </div>
        </div>
        <aside class="ui five wide column"><img src="images/gym.jpg" class="ui medium image"/></aside>
    </div>
</section>
